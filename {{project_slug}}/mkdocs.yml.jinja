site_name: {{ project_name }} Documentation
site_url: {% if gh_username %}https://{{ gh_username}}.github.io/{{project_slug}}/{% else %}FILL ME IN{% endif %}
site_author: {{ author_name }}
copyright: Copyright &copy; {% now 'utc' '%Y' %} {{ author_name }}
watch: [mkdocs.yml, README.md, CHANGELOG.md, CODE_OF_CONDUCT.md, SECURITY.md, src/{{ package_name }}]
nav:
  - Home: index.md
  - Reference: reference/
  - Changelog: changelog.md
  - Contributing: contributing.md
{% if include_coc -%}  - Code of Conduct: code_of_conduct.md{% endif %}
  - Security: security.md
theme:
  name: material
  custom_dir: docs/overrides
  palette:
    scheme: slate
    primary: indigo
    accent: deep-purple
repo_url: {% if gh_username %}https://github.com/{{gh_username}}/{{ project_slug}}{% else %}FILL ME IN{% endif %}
plugins:
  - search
  - autorefs
  - include-markdown
  - gen-files:
      scripts:
        - docs/scripts/gen_ref_files.py
  - literate-nav:
      nav_file: SUMMARY.txt
  - mkdocstrings:
      handlers:
        python:
          options:
            separate_signature: true
            show_signature_annotations: true
            merge_init_into_class: true
            annotations_path: brief
            docstring_options:
              ignore_init_summary: true
  - mike:
      canonical_version: latest
markdown_extensions:
    - pymdownx.highlight:
        anchor_linenums: true
    - pymdownx.inlinehilite
    - pymdownx.snippets
    - pymdownx.superfences
    - footnotes
    - admonition

extra:
  version:
    provider: mike
